<!-- views/profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('components/header.ejs', {title: 'Profile'}); %>
</head>
<body>
<%- include('components/sidebar.ejs', {user: user}); %>
<main>

    <p>
        ID: <%= user.id %><br/>
        Username: <%= user.username %><br/>
        Name: <%= user.displayName %><br/>
        <% if (user.emails) { %>
            Email: <%= user.emails[0].value %><br/>
        <% } %>
    </p>
    <a href="/logout">Log out</a>

</main>
</body>
</html>
